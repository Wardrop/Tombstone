<% @document[:breadcrumb] = [['', '/'], ['Login', '/login']] %>
<div class="v_padded">
  <form method="post" action='/login' class="rowed">
    <label>
      <span>Username</span>
      <input type="text" name="username" style="width: 40%" />
    </label>
    <label>
      <span>Password</span>
      <input type="password" name="password" style="width: 40%" autocomplete="off" />
    </label>
    <label>
      <span></span>
      <input type="submit" name="login" value="Login" />
    </label>
  </form>
</div>