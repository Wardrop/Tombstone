<%
@document[:title] = "View Reservation ##{@allocation.id}"
p @allocation.role_by_type('reservee')
@document[:page_heading] = print("Reservation ##{@allocation.id}") do
  "Reservation for #{@allocation.role_by_type('reservee').person.name.titleize}"
end
content_for :head do
%>
  <script type="text/javascript">
  $( function () {
      var multibutton = new Ts.FormViews.Multibutton({
        values: {edit: 'Edit', delete: 'Delete', inter: 'Inter', print: 'Print'},
        actions: {
          edit: function () {
            window.location = <%= url(:reservation_edit, :id => @allocation.id).to_json %>
          },
          delete: function () {
            if (confirm('Are you sure you want to delete this reservation?')) {
              $('<form method="post" />').append($('<input type="hidden" name="_method" value="delete" />')).submit()
            }
          },
          inter: function () {
            window.location = <%= url(:interment_new_from_reservation, :id => @allocation.id).to_json %>
          },
          print: function () {
            window.print()
          },
          default: function () {
            alert('This function is not currently implemented.')
          }
        }
      })
			var section = new Ts.FormViews.Section({title: 'Actions', body: multibutton.render().el})
			$('#reservation_view').append($(section.render().el).addClass('noprint'))
    })
  </script>
<%
end
%>
<div id="reservation_view" class="rowed very_wide view">
  <% @allocation.roles.each do |role| %>
    <section>
      <h2 class="underline"><%= role.type.demodulize.titleize %></h2>
      <div id="<%= role.type %>_section" class="section padded" name="reservee">
        <%= partial 'shared/role_view', :locals => {role: role} %>
      </div>
    </section>
  <% end %>
  <% if @allocation.place %>
    <section>
      <h2 class="underline">Location</h2>
      <div id="places_section" class="section padded" name="place">
      <% @allocation.place.ancestors.reverse.push(@allocation.place).each do |place| %>
        <div class="row">
          <span><%= place.type.demodulize.titleize %></span>
          <div><%= place.name %></div>
        </div>
      <% end %>
      </div>
    </section>
  <% end %>
  <section>
    <h2 class="underline">Other Details</h2>
    <div class="section padded">
      <label>
        <span>Receipt No's</span>
        <div><%= print { @allocation.transactions.map{ |t| t.receipt_no }.join(', ') } %></div>
      </label>
    	<label>
        <span>Location Description</span>
        <div><%= print { allocation.location_description } %></div>
      </label>
      <label>
        <span>Comments</span>
        <div><%= print { @allocation.comments } %></div>
      </label>
      <label>
        <span>Status</span>
        <div><%= print { @allocation.status.demodulize.titleize } %></div>
      </label>
    </div>
  </section>
  <!--iframe src="<%= url :"photos_view", :id => @allocation.place.id %>" onload='javascript:resizeIframe(this);'>Browser not compatible.</iframe-->
</div>