<%
@document[:title] = 'Create Reservation'
content_for :head do
%>
  <script type="text/javascript">
    $( function () {
      new Ts.FormViews.NewAllocationForm({
        el: $('#reservation_form')[0],
        roles: ['reservee', 'applicant', 'next_of_kin'],
        roleData: $('json\\:roles').parseJSON() || {},
        placeData: $('json\\:places').parseJSON() || [],
        mutlibutton: new Ts.FormViews.Multibutton({name: 'submit', values: {active: 'Submit'}})
      })
    })
  </script>
  <script type="application/json" id="json:places">
    <%= @root_places.to_json %>
  </script>
<% end %>
<%= partial 'reservation/form'%>