<%
@document[:title] = 'Create Reservation'
content_for :head do
%>
  <script type="text/javascript">
    $( function () {
      new Ts.FormViews.NewAllocationForm({
        el: $('#reservation_form')[0],
        valid_roles: ['reservee', 'applicant', 'next_of_kin'],
        states: {active: 'Submit'}
      })
    })
    // new Ts.FormViews.Multibutton({name: 'submit', values: {active: 'Submit'}})
  </script>
  <script type="application/json" id="json:place_data">
    <%= {0 => @root_places}.to_json %>
  </script>
  <script type="application/json" id="json:allocation_data">
    <%=
    Tombstone::Reservation.new.to_json(include: {roles: {include: [:person, :residential_contact, :mailing_contact]}, place: {}, transactions: {}})
    %>
  </script>
<% end %>
<%= partial 'reservation/form'%>