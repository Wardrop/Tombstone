<!DOCTYPE html>
<html>
<head>
  <!-- Load Queue widget CSS and jQuery -->
  <link rel="stylesheet" href="/scripts/vendor/plupload/js/jquery.plupload.queue/css/jquery.plupload.queue.css"/>

  <script type="text/javascript" src="<%= url '/scripts/vendor/jquery-1.7.1.min.js' %>"></script>

  <!-- Third party script for BrowserPlus runtime (Google Gears included in Gears runtime now) -->
  <script type="text/javascript" src="http://bp.yahooapis.com/2.4.21/browserplus-min.js"></script>

  <!-- Load plupload and all it's runtimes and finally the jQuery queue widget -->
  <script type="text/javascript" src="/scripts/vendor/plupload/js/plupload.full.js"></script>
  <script type="text/javascript" src="/scripts/vendor/plupload/js/jquery.plupload.queue/jquery.plupload.queue.js"></script>

  <script type="text/javascript">

    // Convert divs to queue widgets when the DOM is ready
    $(function() {
      $("#uploader").pluploadQueue({
        // General settings
        runtimes : 'gears,flash,silverlight,browserplus,html5',
        url : '<%= url(:photos_add, :id => @place_id) %>',
        max_file_size : '10mb',
        chunk_size : '1mb',
        unique_names : true,

        // Specify what files to browse for
        filters : [
          {title : "Image files", extensions : "jpg,gif,png"},
          {title : "Zip files", extensions : "zip"}
        ],

        // Flash settings
        flash_swf_url : '/scripts/vendor/plupload/js/plupload.flash.swf',

        // Silverlight settings
        silverlight_xap_url : '/scripts/vendor/plupload/js/plupload.silverlight.xap'
      });

      // Client side form validation
      $('form').submit(function(e) {
        var uploader = $('#uploader').pluploadQueue();

        // Files in queue upload them first
        if (uploader.files.length > 0) {
          // When all files are uploaded submit form
          uploader.bind('StateChanged', function() {
            if (uploader.files.length === (uploader.total.uploaded + uploader.total.failed)) {
              $('form')[0].submit();
            }
          });

          uploader.start();
        } else {
          alert('You must queue at least one file.');
        }

        return false;
      });
    });
  </script>

</head>
<body>
<div style="background: white;">
  <!--form id="upload_photos" method="post" class="rowed wide" action="<%= url(:photos_add, :id => @place_id) %>" enctype="multipart/form-data"-->
    <section>
      <h2 class="underline">Photographs</h2>
      <!--input type="file" name="blob" id="blob"/-->
      <!--input type="submit" name="upload" id="upload" value="Upload photo"/-->
      <div id="uploader">
        <p>You browser doesn't have Flash, Silverlight, Gears, BrowserPlus or HTML5 support.</p>
      </div>

      <div class="section padded">
        <ul>
          <% @blobs.each do |blob| %>
            <li>
              <img src="<%= blob.file.thumbnail.url %>"/>
            </li>
          <% end %>
        </ul>
      </div>
    </section>
  <!--/form-->
</div>
</body>
</html>