<%
@document[:title] = "Edit Interment ##{@allocation.id}"
content_for :head do
%>
  <script type="text/javascript">
    $( function () {
      var state_map = {pending: 'Submit', approved: 'Approve', interred: 'Inter', completed: 'Complete'}
      var permitted_states = <%= @allocation.permitted_states.to_json %>
      var states = {}
      permitted_states.forEach(function (s) { if (state_map[s]) states[s] = state_map[s] })
      new Ts.FormViews.AllocationForm({
        el: $('#interment_form')[0],
        valid_roles: <%= Tombstone::Interment.valid_roles.to_json %>,
        states: states,
        type: 'interment'
      })
    })
  </script>
<% end %>
<%= partial 'interment/form' %>