<%
@document[:title] = 'Create Interment'
content_for :head do
%>
  <script type="text/javascript">
    $( function () {
      new Ts.FormViews.AllocationForm({
          el: $('#interment_form')[0],
          valid_roles: <%= Tombstone::Interment.valid_roles.to_json %>,
          multibutton: {
            items: [
              {name: 'provisional', value: 'Save', action: 'submitWithStatus'},
              {name: 'pending', value: 'Submit', action: 'submitWithStatus'}
            ],
            selected: '[name=pending]'
          },
          type: 'interment'
      })
    })
  </script>
<% end %>
<%= partial 'interment/form' %>